@model List<ProjectGetVM>

<div class="container">
    <div class="row">

        <div class="col-2">
            <a class="btn btn-success" asp-action="Create">Create</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Image</th>
                    <th scope="col">CategoryName</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <th scope="row">@project.Id</th>
                        <td>@project.Title</td>
                        <td><img src="~/assets/images/@project.Image"/></td>
                        <td>@project.CategoryName</td>
                        <td>

                            <a asp-action="Update" asp-route-id="@project.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>